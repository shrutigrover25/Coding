#include<iostream>
using namespace std;

int minsum(int arr[], int n)
{
   sort(arr,arr+n);
   
   for(int i=0;i<n;i++)
   {
     if(i%2==0)
     {
       num1=num1*10+arr[i];
     }
     else
     {
       num2=num2*10+arr[i];
     }
      
       return num2+num1;
   
   }


int main()
{
    int arr[] = {5, 3, 0, 7, 4};
    int n = sizeof(arr)/sizeof(arr[0]);
    cout<<"The required sum is  "<<minSum(arr, n)<<endl;
    return 0;
}
